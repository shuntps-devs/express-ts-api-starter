{
  "name": "express-typescript-starter",
  "version": "0.2.0",
  "description": "ðŸš€ Production-ready Express.js API boilerplate built with TypeScript, MongoDB, Jest testing, GitHub Actions CI/CD, and Docker. Enterprise-grade security and architecture.",
  "main": "dist/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/shuntps/express-typescript-starter.git"
  },
  "author": "shuntps",
  "license": "MIT",
  "keywords": [
    "express",
    "typescript",
    "nodejs",
    "mongodb",
    "jest",
    "docker",
    "ci-cd",
    "github-actions",
    "api",
    "boilerplate",
    "starter",
    "production",
    "security",
    "i18n",
    "winston"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:en": "cross-env DEFAULT_LANGUAGE=en node dist/server.js",
    "start:fr": "cross-env DEFAULT_LANGUAGE=fr node dist/server.js",
    "dev": "nodemon",
    "dev:en": "cross-env DEFAULT_LANGUAGE=en nodemon",
    "dev:fr": "cross-env DEFAULT_LANGUAGE=fr nodemon",
    "dev:setup": "npm run clean:all && npm install && npm run build && npm run test",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:check": "eslint . --ext .ts --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write . && eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:verbose": "jest --verbose",
    "test:admin": "node scripts/test-admin-endpoints.js",
    "docker:build": "docker build -t express-typescript-starter .",
    "docker:run": "docker run -p 3000:3000 express-typescript-starter",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:dev": "docker-compose up --build",
    "prepare": "husky",
    "validate": "node scripts/validate-code-quality.js",
    "ci": "npm run lint:check && npm run type-check && npm run test:ci && npm run validate",
    "deploy:build": "node scripts/deploy.js build",
    "deploy:prod": "node scripts/deploy.js deploy production",
    "deploy:staging": "node scripts/deploy.js deploy staging",
    "deploy:health": "node scripts/deploy.js health",
    "clean:cache": "scripts\\clean-vscode-cache.bat",
    "clean:all": "npm run clean && npm run clean:cache",
    "version:patch": "npm version patch && git push && git push --tags",
    "version:minor": "npm version minor && git push && git push --tags",
    "version:major": "npm version major && git push && git push --tags",
    "release:ready": "npm run ci && npm run build"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "i18next": "^25.3.2",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-middleware": "^3.8.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.1",
    "morgan": "^1.10.1",
    "resend": "^6.0.1",
    "winston": "^3.17.0",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/i18next": "^12.1.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.2.0",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
