{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "roots": ["<rootDir>/src"],
  "testMatch": ["**/__tests__/**/*.test.ts", "**/?(*.)+(spec|test).ts"],
  "testPathIgnorePatterns": ["<rootDir>/src/__tests__/setup.ts"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.{js,ts}",
    "!src/**/*.d.ts",
    "!src/__tests__/**/*",
    "!src/**/__tests__/**/*",
    "!src/server.ts",
    "!src/config/database.ts"
  ],
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "setupFilesAfterEnv": [
    "<rootDir>/src/__tests__/setup.ts"
  ],
  "testTimeout": 30000,
  "clearMocks": true,
  "restoreMocks": true
}
